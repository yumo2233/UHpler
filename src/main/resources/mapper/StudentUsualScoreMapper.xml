<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.allspark.uhelper.db.mapper.StudentUsualScoreMapper">

    <resultMap id="BaseResultMap" type="com.allspark.uhelper.db.pojo.StudentUsualScore">
            <result property="id" column="id" jdbcType="BIGINT"/>
            <result property="targetId" column="target_id" jdbcType="BIGINT"/>
            <result property="checkId" column="check_id" jdbcType="BIGINT"/>
            <result property="usualScore" column="usual_score" jdbcType="OTHER"/>
            <result property="courseId" column="course_id" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,target_id,check_id,
        usual_score,course_id
    </sql>
    <select id="selectUsualScoreByCourseIdAndTargetIdAndCheckId" resultMap="BaseResultMap">
        select usual_score
        from u_classinfo.student_usual_score
        where course_id = #{courseId,jdbcType=NUMERIC}
          AND target_id = #{targetId,jdbcType=NUMERIC}
          AND check_id = #{checkId,jdbcType=NUMERIC}
    </select>
    <select id="selectUsualScoreByCourseId" resultMap="BaseResultMap">
        select usual_score
        from u_classinfo.student_usual_score
        where course_id = #{courseId,jdbcType=NUMERIC}
    </select>
    <select id="selectAllByCourseId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from u_classinfo.student_usual_score
        where
        course_id = #{courseId,jdbcType=NUMERIC}
    </select>
</mapper>
