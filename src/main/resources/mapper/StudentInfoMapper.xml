<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.allspark.uhelper.db.mapper.StudentInfoMapper">

    <resultMap id="BaseResultMap" type="com.allspark.uhelper.db.pojo.StudentInfo">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="classId" column="class_id" jdbcType="BIGINT"/>
            <result property="number" column="number" jdbcType="VARCHAR"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="index" column="index" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,class_id,`number`,
        `name`,`index`
    </sql>
    <select id="selectAllByClassId" resultMap="BaseResultMap" parameterType="arraylist">
        select
        <include refid="Base_Column_List"/>
        from u_classinfo.student_info
        where
        class_id in #{classId,jdbcType=NUMERIC}
    </select>
    <select id="listAllByClassIdIn" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from u_classinfo.student_info
        where
        class_id in
        <foreach collection="classIdList" item="item" open="(" close=")" separator=",">
            #{item,jdbcType=NUMERIC}
        </foreach>
        order by `index`;
    </select>

    <insert id="insertStudent" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO u_classinfo.student_info (`name`, `number`, `index`, class_id)
        VALUES (#{name}, #{number}, #{index}, #{classId})
    </insert>

    <insert id="insertStudentBatch" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO u_graduateinfo.graduate_info (`name`, `number`, `index`, class_id) VALUES
        <foreach collection="list" separator="," item="item">
            (#{name}, #{number}, #{index}, #{classId})
        </foreach>
    </insert>

    <select id="selectStudentByClassId" resultType="hashmap">
        SELECT id, `index`, `name`, `number`
        FROM u_classinfo.student_info
        WHERE class_id = #{class_id}
    </select>
    <select id="selectAllByNumberIn" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from u_classinfo.student_info
        where
        number in
        <foreach collection="numberList" item="item" open="(" close=")" separator=",">
            #{item,jdbcType=VARCHAR}
        </foreach>
    </select>
</mapper>
