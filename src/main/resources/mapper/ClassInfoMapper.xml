<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.allspark.uhelper.db.mapper.ClassInfoMapper">

    <resultMap id="BaseResultMap" type="com.allspark.uhelper.db.pojo.ClassInfo">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="college" column="college" jdbcType="TINYINT"/>
            <result property="professional" column="professional" jdbcType="VARCHAR"/>
            <result property="grade" column="grade" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="INTEGER"/>
            <result property="headcount" column="headcount" jdbcType="INTEGER"/>
            <result property="userId" column="user_id" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,college,professional,
        grade,name,headcount,
        user_id
    </sql>
    <select id="selectNameById" resultType="string">
        select name
        from u_classinfo.class_info
        where id = #{id,jdbcType=NUMERIC}
    </select>

    <insert id="insetClass">
        INSERT INTO u_classinfo.class_info (id, college, professional, grade, name, headcount, user_id)
        VALUES (#{id}, #{college}, #{professional}, #{grade}, #{name}, #{headcount}, #{userId})
    </insert>

    <delete id="deleteClass">
        DELETE
        FROM u_classinfo.class_info
        WHERE id = #{id}
    </delete>

    <update id="updateClass">
        UPDATE u_classinfo.class_info
        <set>
            <if test="name != null and name !=''">
                name = #{name},
            </if>
            <if test="collegeDB != null and collegeDB !=''">
                college = #{collegeDB},
            </if>
            <if test="professional != null and professional !=''">
                professional = #{professional},
            </if>
            <if test="grade != null and grade !=''">
                grade = #{grade},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="selectClass" resultType="hashmap">
        SELECT *
        FROM u_classinfo.class_info
    </select>

    <select id="selectCourse" resultType="int">
        SELECT count(*)
        FROM u_classinfo.fk_class_course
        WHERE class_id = #{class_id}
    </select>


</mapper>
